
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <script src="angular-1.3.0/angular.min.js"></script>
    <style>
       body{
           background-color: lightblue;
       } 
       #add,#show{
           width: 40%;
           margin: 100px auto;
       }
       #add input{
           width: 90%;
           height: 30px;
       }
       #add button{
           height: 36px;
           width:8%;
       }
       #add h1{
           text-align: center;
       }
    </style>            
</head>
<body ng-app="myApp" ng-controller="myCtrl">
    <div id="add">
    <h1>ToDo List</h1><br/>
    <input ng-model="task" ng-keyup="myKeyUp($event)"></input>
    <button ng-click="add()">提交</button>     
    </div> 
    <div id="show">
        <ol>
            <li ng-repeat="x in list">{{x}}<button ng-click="remove($index)">×</button></li>
        </ol>
    </div>
    <script>
        var app = angular.module('myApp', []);
        app.controller('myCtrl',function($scope){
            $scope.list=['欢迎使用'];
            $scope.add=function(){
                $scope.list.push($scope.task);
                $scope.task='';
            }
            $scope.remove= function (x) {
                $scope.list.splice(x, 1);
            }
            //
            $scope.myKeyUp=function(e){
                var keycode=window.event?e.keyCode:e.which;
                if (keycode==13){
                    $scope.list.push($scope.task);
                    $scope.task='';
                }
            }          
        });
    </script>      
</body>
</html>

</body>
</html>
